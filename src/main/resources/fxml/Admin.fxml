<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.csapatnev.casino.controllers.AdminController">

    <!-- TableView to list all users -->
    <TableView fx:id="userTable" layoutX="-3.0" layoutY="14.0" prefHeight="305.0" prefWidth="800.0">
        <columns>
            <TableColumn fx:id="columnId" prefWidth="55.0" text="ID" />
            <TableColumn fx:id="columnFirstName" prefWidth="117.0" text="First Name" />
            <TableColumn fx:id="columnLastName" prefWidth="103.0" text="Last Name" />
            <TableColumn fx:id="columnEmail" prefWidth="125.0" text="Email" />
            <TableColumn fx:id="columnDob" prefWidth="100.0" text="Date of Birth" />
            <TableColumn fx:id="columnPassword" prefWidth="96.0" text="Password" />
            <TableColumn fx:id="columnGender" prefWidth="62.0" text="Gender" />
            <TableColumn fx:id="columnRole" prefWidth="76.0" text="Role" />
            <TableColumn fx:id="columnActions" prefWidth="65.0" text="Actions" />


        </columns>
    </TableView>

    <!-- Buttons for CRUD operations -->
    <Button fx:id="btnCreate" layoutX="285.0" layoutY="420.0" text="Create" />
    <Button fx:id="btnUpdate" layoutX="374.0" layoutY="420.0" text="Update" />
    <Button fx:id="btnDelete" layoutX="471.0" layoutY="420.0" text="Delete" />
   <Button fx:id="btnLogin" layoutX="187.0" layoutY="420.0" mnemonicParsing="false" onAction="#switchToLogin" text="Login" />
</AnchorPane>
